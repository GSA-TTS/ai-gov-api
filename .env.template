# AI Gov API Testing Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real values to version control

# ===== CORE API CONFIGURATION =====
# Base URL for the API under test
API_BASE_URL=http://localhost:8000

# API Keys for testing (obtain these from your deployment)
TEST_API_KEY=your_test_api_key_here
TEST_ADMIN_API_KEY=your_admin_api_key_here
TEST_EMBEDDING_API_KEY=your_embedding_api_key_here

# ===== MODEL CONFIGURATION =====
# Comma-separated list of chat models to test
CHAT_MODELS=claude_3_5_sonnet,gemini-2.0-flash,llama3_8b

# Comma-separated list of embedding models to test
EMBEDDING_MODELS=cohere_english_v3,text-embedding-005

# ===== PROVIDER CONFIGURATION =====
# AWS configuration (if using Bedrock)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# GCP configuration (if using Vertex AI)
GCP_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ===== TEST EXECUTION CONFIGURATION =====
# Test timeouts and limits
TEST_TIMEOUT=30
TEST_MAX_TOKENS=100
TEST_TEMPERATURE=0.1
PARALLEL_WORKERS=4

# ===== COST MANAGEMENT =====
# Daily budget for testing to prevent runaway costs
DAILY_TEST_BUDGET=50.0
COST_PER_1K_TOKENS=0.01
ENABLE_COST_TRACKING=true

# ===== SECURITY TESTING =====
# Enable/disable different types of security tests
ENABLE_SECURITY_TESTS=true
ENABLE_ZERO_TRUST_TESTS=true
ENABLE_PROMPT_INJECTION_TESTS=true
SECURITY_TEST_TIMEOUT=60

# ===== MULTI-MODAL TESTING =====
# File testing configuration
MAX_FILE_SIZE_MB=10
SUPPORTED_FILE_TYPES=jpeg,png,pdf,txt
FILE_PROCESSING_TIMEOUT=30
ENABLE_MALICIOUS_FILE_TESTS=false

# ===== DATA MANAGEMENT =====
# Data generation and retention
ENABLE_DATA_GENERATION_TESTS=true
SYNTHETIC_DATA_ENABLED=true
DATA_RETENTION_DAYS=30

# ===== PERFORMANCE TESTING =====
# Load testing configuration
LOAD_TEST_ENABLED=false
LOAD_TEST_CONCURRENT_USERS=10
LOAD_TEST_DURATION_SECONDS=60

# ===== RELIABILITY TESTING =====
# Circuit breaker and retry configuration
CIRCUIT_BREAKER_ENABLED=true
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=1

# ===== LOGGING AND MONITORING =====
# Logging configuration
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=false
METRICS_ENABLED=true

# ===== DATABASE CONFIGURATION (if testing database features) =====
# Database connection for testing
DATABASE_URL=postgresql://user:password@localhost:5432/test_db
DATABASE_TEST_ISOLATION=true

# ===== ADDITIONAL SECURITY CONFIGURATION =====
# Rate limiting and security testing
RATE_LIMIT_REQUESTS_PER_MINUTE=100
ENABLE_RATE_LIMIT_TESTS=true

# JWT Configuration for testing
JWT_SECRET_KEY=your_jwt_secret_for_testing
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===== PROVIDER-SPECIFIC CONFIGURATION =====
# OpenAI API (if testing OpenAI provider)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (if testing Claude directly)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cohere API (if testing Cohere directly)
COHERE_API_KEY=your_cohere_api_key_here

# ===== INTEGRATION TEST CONFIGURATION =====
# External service endpoints for integration testing
EXTERNAL_WEBHOOK_URL=https://your-webhook-endpoint.com/test
EXTERNAL_SERVICE_API_KEY=your_external_service_key

# ===== DEVELOPMENT AND DEBUGGING =====
# Development flags
DEBUG_MODE=false
VERBOSE_LOGGING=false
SAVE_TEST_ARTIFACTS=false
TEST_ARTIFACTS_PATH=./test_artifacts

# ===== COMPLIANCE AND AUDIT =====
# Compliance testing flags
ENABLE_COMPLIANCE_TESTS=true
AUDIT_LOG_LEVEL=INFO
ENABLE_GDPR_TESTS=false
ENABLE_HIPAA_TESTS=false