# Enhanced Environment Configuration for GSAi API Testing Framework
# Copy this file to .env and fill in the actual values

# ===== CORE API CONFIGURATION =====
API_BASE_URL=https://your-api-endpoint.com
TEST_API_KEY=your_test_api_key_here
TEST_ADMIN_API_KEY=your_admin_api_key_here
TEST_EMBEDDING_API_KEY=your_embedding_api_key_here

# ===== MODEL CONFIGURATION =====
# Chat Models (comma-separated)
CHAT_MODELS=claude_3_5_sonnet,claude_3_7_sonnet,gemini-2.0-flash,llama3_8b
# Embedding Models (comma-separated) 
EMBEDDING_MODELS=cohere_english_v3,text-embedding-005

# ===== PROVIDER-SPECIFIC CONFIGURATION =====
AWS_REGION=us-east-1
GCP_PROJECT_ID=your-gcp-project-id

# ===== TEST EXECUTION CONFIGURATION =====
TEST_TIMEOUT=30
TEST_MAX_TOKENS=100
TEST_TEMPERATURE=0.1
PARALLEL_WORKERS=4

# ===== COST MANAGEMENT =====
DAILY_TEST_BUDGET=50.00
COST_PER_1K_TOKENS=0.01
ENABLE_COST_TRACKING=true

# ===== SECURITY TESTING CONFIGURATION =====
ENABLE_SECURITY_TESTS=true
ENABLE_ZERO_TRUST_TESTS=true
ENABLE_PROMPT_INJECTION_TESTS=true
SECURITY_TEST_TIMEOUT=60

# ===== MULTI-MODAL TESTING CONFIGURATION =====
MAX_FILE_SIZE_MB=10
SUPPORTED_FILE_TYPES=jpeg,png,pdf,txt
FILE_PROCESSING_TIMEOUT=30
ENABLE_MALICIOUS_FILE_TESTS=false

# ===== DATA MANAGEMENT CONFIGURATION =====
ENABLE_DATA_GENERATION_TESTS=true
SYNTHETIC_DATA_ENABLED=true
DATA_RETENTION_DAYS=30

# ===== PERFORMANCE TESTING =====
LOAD_TEST_ENABLED=false
LOAD_TEST_CONCURRENT_USERS=10
LOAD_TEST_DURATION_SECONDS=60

# ===== RELIABILITY TESTING =====
CIRCUIT_BREAKER_ENABLED=true
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=1

# ===== LOGGING AND MONITORING =====
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=false
METRICS_ENABLED=true

# ===== SSL/TLS CONFIGURATION =====
# WARNING: Only disable SSL verification in development/testing environments!
VERIFY_SSL=true
# Path to custom CA certificate (optional, for self-signed certs)
# SSL_CERT_PATH=/path/to/ca-cert.pem