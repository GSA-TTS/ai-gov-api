# GSAi API Testing Framework Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== CORE API CONFIGURATION =====
# Base URL for the API under test
API_BASE_URL=http://localhost:8000

# API Keys for testing (load from secure environment, not hardcoded)
TEST_API_KEY=your_test_api_key_here
TEST_ADMIN_API_KEY=your_admin_api_key_here  
TEST_EMBEDDING_API_KEY=your_embedding_api_key_here

# ===== MODEL CONFIGURATION =====
# Comma-separated list of chat models to test
CHAT_MODELS=claude_3_5_sonnet,gemini-2.0-flash,llama3_8b

# Comma-separated list of embedding models to test
EMBEDDING_MODELS=cohere_english_v3,text-embedding-005

# ===== PROVIDER CONFIGURATION =====
# AWS Configuration
AWS_REGION=us-east-1

# GCP Configuration  
GCP_PROJECT_ID=your_gcp_project_id

# ===== TEST EXECUTION CONFIGURATION =====
# Request timeout in seconds
TEST_TIMEOUT=30

# Maximum tokens for test requests
TEST_MAX_TOKENS=100

# Temperature for test requests
TEST_TEMPERATURE=0.1

# Number of parallel workers for concurrent tests
PARALLEL_WORKERS=4

# ===== COST MANAGEMENT =====
# Daily testing budget in USD
DAILY_TEST_BUDGET=50.0

# Cost per 1K tokens (for estimation)
COST_PER_1K_TOKENS=0.01

# Enable cost tracking
ENABLE_COST_TRACKING=true

# ===== SECURITY TESTING =====
# Enable security tests
ENABLE_SECURITY_TESTS=true

# Enable zero trust tests
ENABLE_ZERO_TRUST_TESTS=true

# Enable prompt injection tests  
ENABLE_PROMPT_INJECTION_TESTS=true

# Security test timeout in seconds
SECURITY_TEST_TIMEOUT=60

# ===== MULTI-MODAL TESTING =====
# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Supported file types for testing
SUPPORTED_FILE_TYPES=jpeg,png,pdf,txt

# File processing timeout in seconds
FILE_PROCESSING_TIMEOUT=30

# Enable malicious file tests (use with caution)
ENABLE_MALICIOUS_FILE_TESTS=false

# ===== DATA MANAGEMENT =====
# Enable data generation tests
ENABLE_DATA_GENERATION_TESTS=true

# Enable synthetic data generation
SYNTHETIC_DATA_ENABLED=true

# Data retention period in days
DATA_RETENTION_DAYS=30

# ===== PERFORMANCE TESTING =====
# Enable load testing
LOAD_TEST_ENABLED=false

# Number of concurrent users for load tests
LOAD_TEST_CONCURRENT_USERS=10

# Load test duration in seconds
LOAD_TEST_DURATION_SECONDS=60

# ===== RELIABILITY TESTING =====
# Enable circuit breaker testing
CIRCUIT_BREAKER_ENABLED=true

# Maximum retry attempts
RETRY_MAX_ATTEMPTS=3

# Retry backoff in seconds
RETRY_BACKOFF_SECONDS=1

# ===== LOGGING AND MONITORING =====
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Enable response logging (may log sensitive data)
ENABLE_RESPONSE_LOGGING=false

# Enable metrics collection
METRICS_ENABLED=true

# ===== SENSITIVE DATA CONFIGURATION =====
# NOTE: The following should be loaded from secure environment variables
# Never commit real secrets to version control

# Example of how to load sensitive data from environment:
# TEST_API_KEY=${TEST_API_KEY}
# TEST_ADMIN_API_KEY=${TEST_ADMIN_API_KEY}
# TEST_EMBEDDING_API_KEY=${TEST_EMBEDDING_API_KEY}

# Production API keys should be stored in:
# - AWS Secrets Manager
# - Azure Key Vault  
# - Google Secret Manager
# - HashiCorp Vault
# - CI/CD environment variables
# - Secure environment variable files (not committed to git)